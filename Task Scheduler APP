        infoPanel.add(infoTitle);
        infoPanel.add(Box.createRigidArea(new Dimension(0, 10)));
        infoPanel.add(infoText);

        panel.add(infoPanel);

        return panel;
    }

    private JButton createStyledButton(String text, Color bgColor) {
        JButton button = new JButton(text);
        button.setFont(new Font("Segoe UI", Font.BOLD, 13));
        button.setForeground(Color.WHITE);
        button.setBackground(bgColor);
        button.setFocusPainted(false);
        button.setBorderPainted(false);
        button.setMaximumSize(new Dimension(Integer.MAX_VALUE, 40));
        button.setCursor(new Cursor(Cursor.HAND_CURSOR));

        button.addMouseListener(new MouseAdapter() {
            public void mouseEntered(MouseEvent e) {
                button.setBackground(bgColor.darker());
            }
            public void mouseExited(MouseEvent e) {
                button.setBackground(bgColor);
            }
        });

        return button;
    }

    private void addTask() {
        String title = titleField.getText().trim();
        String description = descriptionArea.getText().trim();
        String priority = (String) priorityCombo.getSelectedItem();

        if (title.isEmpty()) {
            showMessage("Please enter a task title!", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }

        if (description.isEmpty()) {
            description = "No description provided";
        }

        Task task = new Task(title, description, priority);
        taskQueue.enqueue(task);

        Object[] row = {
                task.getId(),
                task.getTitle(),
                task.getDescription(),
                task.getPriority(),
                task.getCreatedAt()
        };
        pendingTableModel.addRow(row);

        titleField.setText("");
        descriptionArea.setText("");
        priorityCombo.setSelectedIndex(0);

        updateAllInfo();
        showMessage("Task added to queue successfully!", "Success", JOptionPane.INFORMATION_MESSAGE);
    }

    private void dequeueTask() {
        if (taskQueue.isEmpty()) {
            showMessage("Queue is empty! No tasks to process.", "Info", JOptionPane.INFORMATION_MESSAGE);
            return;
        }

        Task task = taskQueue.dequeue();

        // Add to history
        taskHistory.addCompletedTask(task);

        // Add to history table
        Object[] historyRow = {
                task.getId(),
                task.getTitle(),
                task.getDescription(),
                task.getPriority(),
                task.getCreatedAt(),
                task.getCompletedAt()
        };
        historyTableModel.addRow(historyRow);

        // Remove from pending table
        if (pendingTableModel.getRowCount() > 0) {
            pendingTableModel.removeRow(0);
        }

        updateAllInfo();
        showMessage("âœ… Task completed: " + task.getTitle() + "\n\nTask moved to history!",
                "Task Completed", JOptionPane.INFORMATION_MESSAGE);
    }

    private void peekTask() {
        if (taskQueue.isEmpty()) {
            showMessage("Queue is empty! No tasks to view.", "Info", JOptionPane.INFORMATION_MESSAGE);
            return;
        }

        Task task = taskQueue.peek();
        String message = String.format(
                "Next Task Details:\n\n" +
                        "ID: %d\n" +
                        "Title: %s\n" +
                        "Description: %s\n" +
                        "Priority: %s\n" +
                        "Created: %s\n" +
                        "Status: %s",
                task.getId(),
                task.getTitle(),
                task.getDescription(),
                task.getPriority(),
                task.getCreatedAt(),
                task.getStatus()
        );
        showMessage(message, "Next Task (Peek)", JOptionPane.INFORMATION_MESSAGE);
    }

    private void clearAllTasks() {
        if (taskQueue.isEmpty()) {
            showMessage("Queue is already empty!", "Info", JOptionPane.INFORMATION_MESSAGE);
            return;
        }

        int confirm = JOptionPane.showConfirmDialog(
                this,
                "Are you sure you want to clear all pending tasks?\n(This will NOT affect completed tasks history)",
                "Confirm Clear",
                JOptionPane.YES_NO_OPTION,
                JOptionPane.WARNING_MESSAGE
        );

        if (confirm == JOptionPane.YES_OPTION) {
            taskQueue.clear();
            pendingTableModel.setRowCount(0);
            updateAllInfo();
            showMessage("All pending tasks cleared!", "Success", JOptionPane.INFORMATION_MESSAGE);
        }
    }

    private void clearHistory() {
        if (taskHistory.getCompletedCount() == 0) {
            showMessage("History is already empty!", "Info", JOptionPane.INFORMATION_MESSAGE);
            return;
        }

        int confirm = JOptionPane.showConfirmDialog(
                this,
                "Are you sure you want to clear the entire task history?\nThis action cannot be undone!",
                "Confirm Clear History",
                JOptionPane.YES_NO_OPTION,
                JOptionPane.WARNING_MESSAGE
        );

        if (confirm == JOptionPane.YES_OPTION) {
            taskHistory.clearHistory();
            historyTableModel.setRowCount(0);
            updateAllInfo();
            showMessage("Task history cleared!", "Success", JOptionPane.INFORMATION_MESSAGE);
        }
    }

    private void updateAllInfo() {
        int pendingSize = taskQueue.size();
        int completedSize = taskHistory.getCompletedCount();

        queueSizeLabel.setText("Tasks in Queue: " + pendingSize);
        completedCountLabel.setText("âœ… Completed Tasks: " + completedSize);

        // Update tab titles
        tabbedPane.setTitleAt(0, "ðŸ“ Pending Tasks (" + pendingSize + ")");
        tabbedPane.setTitleAt(1, "âœ… Completed Tasks (" + completedSize + ")");

        if (taskQueue.isEmpty()) {
            nextTaskLabel.setText("No tasks in queue");
        } else {
            Task next = taskQueue.peek();
            nextTaskLabel.setText(next.toString());
        }
    }

    private void showMessage(String message, String title, int type) {
        JOptionPane.showMessageDialog(this, message, title, type);
    }

    public static void main(String[] args) {
        try {
            UIManager.setLookAndFeel(UIManager.getSystemLookAndFeelClassName());
        } catch (Exception e) {
            e.printStackTrace();
        }

        SwingUtilities.invokeLater(() -> new TaskSchedulerWithHistory());
    }
}
