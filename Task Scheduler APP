import javax.swing.*;
import javax.swing.border.*;
import java.awt.*;
import java.awt.event.*;
import javax.swing.table.DefaultTableModel;
import javax.swing.table.DefaultTableCellRenderer;
import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;
import java.util.LinkedList;
import java.util.Queue;
import java.util.ArrayList;

// ==================== TASK CLASS ====================
class Task {
    private static int idCounter = 1;
    private int id;
    private String title;
    private String description;
    private String priority;
    private LocalDateTime createdAt;
    private LocalDateTime completedAt;
    private String status;

    public Task(String title, String description, String priority) {
        this.id = idCounter++;
        this.title = title;
        this.description = description;
        this.priority = priority;
        this.createdAt = LocalDateTime.now();
        this.status = "Pending";
    }

    public int getId() {
        return id;
    }

    public String getTitle() {
        return title;
    }

    public String getDescription() {
        return description;
    }

    public String getPriority() {
        return priority;
    }

    public String getStatus() {
        return status;
    }

    public void setCompleted() {
        this.status = "Completed";
        this.completedAt = LocalDateTime.now();
    }

    public String getCreatedAt() {
        DateTimeFormatter formatter = DateTimeFormatter.ofPattern("dd-MM-yyyy HH:mm");
        return createdAt.format(formatter);
    }

    public String getCompletedAt() {
        if (completedAt == null) return "N/A";
        DateTimeFormatter formatter = DateTimeFormatter.ofPattern("dd-MM-yyyy HH:mm");
        return completedAt.format(formatter);
    }

    @Override
    public String toString() {
        return "Task #" + id + ": " + title + " [" + priority + "]";
    }
}

// ==================== TASK QUEUE CLASS ====================
class TaskQueue {
    private Queue<Task> queue;

    public TaskQueue() {
        this.queue = new LinkedList<>();
    }

    public void enqueue(Task task) {
        queue.offer(task);
    }

    public Task dequeue() {
        return queue.poll();
    }

    public Task peek() {
        return queue.peek();
    }

    public boolean isEmpty() {
        return queue.isEmpty();
    }

    public int size() {
        return queue.size();
    }

    public Queue<Task> getAllTasks() {
        return new LinkedList<>(queue);
    }

    public void clear() {
        queue.clear();
    }
}

// ==================== TASK HISTORY CLASS ====================
class TaskHistory {
    private ArrayList<Task> completedTasks;

    public TaskHistory() {
        this.completedTasks = new ArrayList<>();
    }

    public void addCompletedTask(Task task) {
        task.setCompleted();
        completedTasks.add(task);
    }

    public ArrayList<Task> getCompletedTasks() {
        return completedTasks;
    }

    public int getCompletedCount() {
        return completedTasks.size();
    }

    public void clearHistory() {
        completedTasks.clear();
    }

    public Task getTaskById(int id) {
        for (Task task : completedTasks) {
            if (task.getId() == id) {
                return task;
            }
        }
        return null;
    }
}

// ==================== MAIN APPLICATION ====================
public class TaskSchedulerWithHistory extends JFrame {
    private TaskQueue taskQueue;
    private TaskHistory taskHistory;
    private JTable pendingTable;
    private JTable historyTable;
    private DefaultTableModel pendingTableModel;
    private DefaultTableModel historyTableModel;
