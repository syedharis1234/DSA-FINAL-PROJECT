    private JButton createStyledButton(String text, Color bgColor) {
        JButton button = new JButton(text);
        button.setFont(emojiFont(Font.BOLD, 13));
        button.setForeground(Color.WHITE);
        button.setBackground(bgColor);
        button.setFocusPainted(false);
        button.setBorderPainted(false);
        button.setOpaque(true);
        button.setContentAreaFilled(true);
        button.setMaximumSize(new Dimension(Integer.MAX_VALUE, 42));
        button.setPreferredSize(new Dimension(300, 42));
        button.setCursor(new Cursor(Cursor.HAND_CURSOR));

        button.addMouseListener(new MouseAdapter() {
            @Override
            public void mouseEntered(MouseEvent e) {
                button.setBackground(bgColor.darker());
            }
            @Override
            public void mouseExited(MouseEvent e) {
                button.setBackground(bgColor);
            }
        });

        return button;
    }

    private void addTask() {
        String title = titleField.getText().trim();
        String description = descriptionArea.getText().trim();
        String priority = (String) priorityCombo.getSelectedItem();

        if (title.isEmpty()) {
            showMessage("âš ï¸ Please enter a task title!", "Input Required", JOptionPane.WARNING_MESSAGE);
            titleField.requestFocusInWindow();
            return;
        }

        if (title.length() > 100) {
            showMessage("âš ï¸ Task title is too long!\n\nMaximum length: 100 characters\nCurrent length: " + title.length(), "Input Error", JOptionPane.WARNING_MESSAGE);
            titleField.requestFocusInWindow();
            return;
        }

        if (description.isEmpty()) {
            description = "No description provided";
        }

        Task task = new Task(title, description, priority);
        taskQueue.enqueue(task);

        Object[] row = {
                task.getId(),
                task.getTitle(),
                task.getDescription(),
                task.getPriority(),
                task.getCreatedAt()
        };
        pendingTableModel.addRow(row);

        titleField.setText("");
        descriptionArea.setText("");
        priorityCombo.setSelectedIndex(0);
        titleField.requestFocusInWindow();

        updateAllInfo();

        if (tabbedPane.getSelectedIndex() != 0) {
            tabbedPane.setSelectedIndex(0);
        }

        showMessage("âœ… Task added to queue successfully!\n\nTotal pending tasks: " + taskQueue.size(), "Success", JOptionPane.INFORMATION_MESSAGE);
    }

    private void dequeueTask() {
        if (taskQueue.isEmpty()) {
            showMessage("Queue is empty! No tasks to process.", "Info", JOptionPane.INFORMATION_MESSAGE);
            return;
        }

        Task task = taskQueue.dequeue();

        taskHistory.addCompletedTask(task);

        Object[] historyRow = {
                task.getId(),
                task.getTitle(),
                task.getDescription(),
                task.getPriority(),
                task.getCreatedAt(),
                task.getCompletedAt()
        };
        historyTableModel.addRow(historyRow);
        if (pendingTableModel.getRowCount() > 0) {
            pendingTableModel.removeRow(0);
        }

        updateAllInfo();

        int result = JOptionPane.showOptionDialog(
                this,
                "âœ… Task completed: " + task.getTitle() + "\n\nTask moved to history!\n\nWould you like to view the completed tasks history?",
                "Task Completed",
                JOptionPane.YES_NO_OPTION,
                JOptionPane.INFORMATION_MESSAGE,
                null,
                new String[]{"View History", "Continue"},
                "Continue"
        );

        if (result == 0) {
            tabbedPane.setSelectedIndex(1);
        }
    }

    private void peekTask() {
        if (taskQueue.isEmpty()) {
            showMessage("Queue is empty! No tasks to view.", "Info", JOptionPane.INFORMATION_MESSAGE);
            return;
        }

        Task task = taskQueue.peek();
        String message = String.format("""
                Next Task Details:
                
                ID: %d
                Title: %s
                Description: %s
                Priority: %s
                Created: %s
                Status: %s""",
                task.getId(),
                task.getTitle(),
                task.getDescription(),
                task.getPriority(),
                task.getCreatedAt(),
                task.getStatus()
        );
        showMessage(message, "Next Task (Peek)", JOptionPane.INFORMATION_MESSAGE);
    }

    private void clearAllTasks() {
        if (taskQueue.isEmpty()) {
            showMessage("Queue is already empty!", "Info", JOptionPane.INFORMATION_MESSAGE);
            return;
        }

        int confirm = JOptionPane.showConfirmDialog(
                this,
                "Are you sure you want to clear all pending tasks?\n(This will NOT affect completed tasks history)",
                "Confirm Clear",
                JOptionPane.YES_NO_OPTION,
                JOptionPane.WARNING_MESSAGE
        );

        if (confirm == JOptionPane.YES_OPTION) {
            taskQueue.clear();
            pendingTableModel.setRowCount(0);
            updateAllInfo();
            showMessage("All pending tasks cleared!", "Success", JOptionPane.INFORMATION_MESSAGE);
        }
    }

    private void clearHistory() {
        if (taskHistory.getCompletedCount() == 0) {
            showMessage("History is already empty!", "Info", JOptionPane.INFORMATION_MESSAGE);
            return;
        }

        int confirm = JOptionPane.showConfirmDialog(
                this,
                "Are you sure you want to clear the entire task history?\nThis action cannot be undone!",
                "Confirm Clear History",
                JOptionPane.YES_NO_OPTION,
                JOptionPane.WARNING_MESSAGE
        );

        if (confirm == JOptionPane.YES_OPTION) {
            taskHistory.clearHistory();
            historyTableModel.setRowCount(0);
            updateAllInfo();
            showMessage("Task history cleared!", "Success", JOptionPane.INFORMATION_MESSAGE);
        }
    }

    private void updateAllInfo() {
        int pendingSize = taskQueue.size();
        int completedSize = taskHistory.getCompletedCount();

        queueSizeLabel.setText("Queue: " + pendingSize);
        completedCountLabel.setText("Completed: " + completedSize);

        tabbedPane.setTitleAt(0, "ðŸ“ Pending Tasks (" + pendingSize + ")");
        tabbedPane.setTitleAt(1, "âœ… Completed Tasks (" + completedSize + ")");

        if (taskQueue.isEmpty()) {
            nextTaskLabel.setText("No tasks in queue");
        } else {
            Task next = taskQueue.peek();
            nextTaskLabel.setText(next.toString());
        }
    }

    private void setupKeyboardShortcuts() {
        KeyStroke ctrlD = KeyStroke.getKeyStroke(KeyEvent.VK_D, InputEvent.CTRL_DOWN_MASK);
        getRootPane().registerKeyboardAction(e -> dequeueTask(), ctrlD, JComponent.WHEN_IN_FOCUSED_WINDOW);

        KeyStroke ctrlP = KeyStroke.getKeyStroke(KeyEvent.VK_P, InputEvent.CTRL_DOWN_MASK);
        getRootPane().registerKeyboardAction(e -> peekTask(), ctrlP, JComponent.WHEN_IN_FOCUSED_WINDOW);

        KeyStroke ctrlH = KeyStroke.getKeyStroke(KeyEvent.VK_H, InputEvent.CTRL_DOWN_MASK);
        getRootPane().registerKeyboardAction(e -> tabbedPane.setSelectedIndex(1), ctrlH, JComponent.WHEN_IN_FOCUSED_WINDOW);

        KeyStroke ctrlShiftC = KeyStroke.getKeyStroke(KeyEvent.VK_C, InputEvent.CTRL_DOWN_MASK | InputEvent.SHIFT_DOWN_MASK);
        getRootPane().registerKeyboardAction(e -> clearAllTasks(), ctrlShiftC, JComponent.WHEN_IN_FOCUSED_WINDOW);

        KeyStroke ctrlN = KeyStroke.getKeyStroke(KeyEvent.VK_N, InputEvent.CTRL_DOWN_MASK);
        getRootPane().registerKeyboardAction(e -> {
            titleField.requestFocusInWindow();
            tabbedPane.setSelectedIndex(0);
        }, ctrlN, JComponent.WHEN_IN_FOCUSED_WINDOW);

        KeyStroke f1 = KeyStroke.getKeyStroke(KeyEvent.VK_F1, 0);
        getRootPane().registerKeyboardAction(e -> showHelp(), f1, JComponent.WHEN_IN_FOCUSED_WINDOW);
    }

    private void viewSelectedTaskDetails(JTable table) {
        int selectedRow = table.getSelectedRow();
        if (selectedRow == -1) return;

        int id = (int) table.getValueAt(selectedRow, 0);
        String title = (String) table.getValueAt(selectedRow, 1);
        String description = (String) table.getValueAt(selectedRow, 2);
        String priority = (String) table.getValueAt(selectedRow, 3);
        String createdAt = (String) table.getValueAt(selectedRow, 4);

        String completedAt = "N/A";
        if (table == historyTable && table.getColumnCount() > 5) {
            completedAt = (String) table.getValueAt(selectedRow, 5);
        }

        String message = String.format("""
                Task Details:
                
                ID: %d
                Title: %s
                Description: %s
                Priority: %s
                Created: %s
                Completed: %s
                
                ðŸ’¡ Tip: Press Delete to remove selected task""",
                id, title, description, priority, createdAt, completedAt
        );

        JOptionPane.showMessageDialog(this, message, "Task Details", JOptionPane.INFORMATION_MESSAGE);
    }

    private void showHelp() {
        String helpMessage = """
                âŒ¨ï¸ Keyboard Shortcuts:
                
                Ctrl+N         - New Task (Focus title field)
                Ctrl+D         - Complete Next Task
                Ctrl+P         - Peek Next Task
                Ctrl+H         - View History
                Ctrl+Shift+C   - Clear All Pending Tasks
                Enter          - Add Task (in title field)
                F1             - Show This Help
                
                ðŸ–±ï¸ Mouse Actions:
                
                Double-click   - View task details
                
                ðŸ“‹ Queue Operations:
                
                â€¢ Tasks are processed in FIFO order
                â€¢ First In, First Out principle
                â€¢ Completed tasks are saved in history
                â€¢ History can be reviewed anytime""";

        JOptionPane.showMessageDialog(this, helpMessage, "Help - Task Scheduler", JOptionPane.INFORMATION_MESSAGE);
    }

    private void showMessage(String message, String title, int type) {
        JOptionPane.showMessageDialog(this, message, title, type);
    }

    private Font emojiFont(int style, int size) {
        String[] candidates = {"Segoe UI Emoji", "Apple Color Emoji", "Noto Color Emoji", "Segoe UI Symbol", "Segoe UI"};
        for (String name : candidates) {
            Font f = new Font(name, style, size);
            if (f.canDisplayUpTo("âœ…") == -1) {
                return f;
            }
        }
        return new Font(Font.SANS_SERIF, style, size);
    }

    public static void main(String[] args) {
        try {
            UIManager.setLookAndFeel(UIManager.getSystemLookAndFeelClassName());
        } catch (ClassNotFoundException | InstantiationException | IllegalAccessException | UnsupportedLookAndFeelException e) {
            System.err.println("Failed to set Look and Feel: " + e.getMessage());
        }

        SwingUtilities.invokeLater(() -> new TaskSchedulerWithHistory());
    }
}
