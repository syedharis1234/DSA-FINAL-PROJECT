    }

    private JPanel createOperationsPanel() {
        JPanel panel = new JPanel();
        panel.setLayout(new BoxLayout(panel, BoxLayout.Y_AXIS));
        panel.setBackground(CARD_BG);
        panel.setBorder(BorderFactory.createCompoundBorder(
                BorderFactory.createLineBorder(new Color(229, 231, 235), 1),
                new EmptyBorder(20, 20, 20, 20)
        ));

        JLabel titleLabel = new JLabel("âš™ï¸ Queue Operations");
        titleLabel.setFont(new Font("Segoe UI", Font.BOLD, 16));
        titleLabel.setForeground(new Color(55, 65, 81));
        titleLabel.setAlignmentX(Component.LEFT_ALIGNMENT);
        panel.add(titleLabel);
        panel.add(Box.createRigidArea(new Dimension(0, 15)));

        JButton dequeueButton = createStyledButton("âœ“ Complete Next Task", HISTORY_COLOR);
        dequeueButton.setAlignmentX(Component.LEFT_ALIGNMENT);
        dequeueButton.addActionListener(e -> dequeueTask());
        panel.add(dequeueButton);
        panel.add(Box.createRigidArea(new Dimension(0, 10)));

        JButton peekButton = createStyledButton("ðŸ‘ï¸ Peek (View Next Task)", SECONDARY_COLOR);
        peekButton.setAlignmentX(Component.LEFT_ALIGNMENT);
        peekButton.addActionListener(e -> peekTask());
        panel.add(peekButton);
        panel.add(Box.createRigidArea(new Dimension(0, 10)));

        JButton clearButton = createStyledButton("ðŸ—‘ï¸ Clear All Pending", DANGER_COLOR);
        clearButton.setAlignmentX(Component.LEFT_ALIGNMENT);
        clearButton.addActionListener(e -> clearAllTasks());
        panel.add(clearButton);
        panel.add(Box.createRigidArea(new Dimension(0, 10)));

        JButton viewHistoryButton = createStyledButton("ðŸ“Š View History", WARNING_COLOR);
        viewHistoryButton.setAlignmentX(Component.LEFT_ALIGNMENT);
        viewHistoryButton.addActionListener(e -> tabbedPane.setSelectedIndex(1));
        panel.add(viewHistoryButton);
        panel.add(Box.createRigidArea(new Dimension(0, 20)));

        // Info Panel
        JPanel infoPanel = new JPanel();
        infoPanel.setLayout(new BoxLayout(infoPanel, BoxLayout.Y_AXIS));
        infoPanel.setBackground(new Color(239, 246, 255));
        infoPanel.setBorder(BorderFactory.createCompoundBorder(
                BorderFactory.createLineBorder(PRIMARY_COLOR, 1),
                new EmptyBorder(15, 15, 15, 15)
        ));
        infoPanel.setAlignmentX(Component.LEFT_ALIGNMENT);

        JLabel infoTitle = new JLabel("â„¹ï¸ Queue Info (FIFO)");
        infoTitle.setFont(new Font("Segoe UI", Font.BOLD, 13));
        infoTitle.setForeground(PRIMARY_COLOR);
        infoTitle.setAlignmentX(Component.LEFT_ALIGNMENT);

        JTextArea infoText = new JTextArea(
